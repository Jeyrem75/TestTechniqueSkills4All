{% extends 'base.html.twig' %}

{% block title %}Car{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center" style="margin-top: 48px; margin-bottom: 32px;">Car</h1>
        <table class="table table-bordered table-hover">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ car.id }}</td>
                </tr>
                <tr>
                    <th>NbSeats</th>
                    <td>{{ car.nbSeats }}</td>
                </tr>
                <tr>
                    <th>NbDoors</th>
                    <td>{{ car.nbDoors }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ car.name }}</td>
                </tr>
                <tr>
                    <th>Cost</th>
                    <td>{{ car.cost }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="container d-flex align-items-center justify-content-evenly">
