{% extends 'base.html.twig' %}

{% block title %}Cars{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center" style="margin-top: 48px; margin-bottom: 32px;">Rechercher des voitures</h1>
        {% if form %}
            {{ form_start(form) }}
            <div class="d-flex justify-content-center">
                <div style="margin-bottom: 12px;">
                    <div class="d-flex flex-wrap" style="margin-bottom: 16px;">
                        {{ form_widget(form.q, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.q) }}
                    </div>
                    <div class="d-flex flex-col align-items-center justify-content-center">
                        {{ form_label(form.categories, 'Catégories', {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.categories) }}
                    </div>
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-primary" style="margin-top: 16px; margin-bottom: 16px;" type="submit">
                            <span>Filtrer</span>
                        </button>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        {% endif %}
        <div class="row row-cols-1 row-cols-md-4 g-4">
            {% for car in cars %}
                <div class="col">
                    <div class="card text-center" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{ car.name }}</h5>
                            <p class="card-text">Nombre de sièges : {{ car.nbSeats }}</p>
                            <p class="card-text">Nombre de portes : {{ car.nbDoors }}</p>
                            <p class="card-text">Prix : {{ car.cost }}€</p>
                            <a href="#" class="btn btn-primary">Plus de détails</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="navigation d-flex justify-content-center" style="margin-top: 32px;">
            {{ knp_pagination_render(cars) }}
        </div>
    </div>
{% endblock %}

